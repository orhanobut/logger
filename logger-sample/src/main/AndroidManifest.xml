<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.logger">

    <application
        android:name=".LoggerSampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ExampleLoggerActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.logger.MainActivity"/>
        </activity>

    </application>

</manifest>
